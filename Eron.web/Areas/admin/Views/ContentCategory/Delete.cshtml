@using Eron.core.App_GlobalResources
@using Eron.web.Helpers
@model Eron.web.Areas.admin.Models.Category.CategoryList
@Html.Action("BreadCrump", "Dashboard", new { title = ViewBag.Title, parent = "مدیریت", mid = "فروشگاه", last = "لیست همه فروشگاه ها", url = Url.Action("IndexPartial", "Dashboard"), nav = true })

<div class="wrapper wrapper-content fade">
    <div class="">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox">
                    <div class="ibox-content">
                        <h3>@GlobalResources.DeleteConfirmationMessage</h3>
                        <div>
                            <dl class="dl-horizontal">
                                <dt>
                                    @Html.DisplayNameFor(model => model.Name)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.Name)
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.Description)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.Description)
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.CreateTime)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.CreateTime)
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.ModifiedTime)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.ModifiedTime)
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.State)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.State)
                                </dd>

                            </dl>

                            @using (Ajax.DefaultForm("delete", "ContentCategory", FormMethod.Post, new { id = Model.Id }, null, GlobalResources.DeleteCategory))
                            {
                                @Html.AntiForgeryToken()

                                <div class="form-actions no-color">
                                    <input type="submit" value="@GlobalResources.Delete" class="btn btn-danger" /> |
                                    @Ajax.DefaultLink(GlobalResources.BackToList, "Index", "ContentCategory", true)
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
